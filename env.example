# ================================
# LLMHive Environment Variables
# ================================
# Copy this file to .env.local and fill in your values

# ================================
# REQUIRED - Authentication (Clerk)
# ================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/pricing

# ================================
# REQUIRED - Stripe (Payments)
# ================================
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_PRO_MONTHLY_PRICE_ID=price_...
STRIPE_PRO_YEARLY_PRICE_ID=price_...
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_...
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_...

# ================================
# REQUIRED - Backend API
# ================================
# URL to your FastAPI backend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
# Alternative variable names (for compatibility)
ORCHESTRATION_API_BASE=http://localhost:8000
LLMHIVE_API_URL=http://localhost:8000

# ================================
# OPTIONAL - Error Tracking (Sentry)
# ================================
# Get these from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://...@...ingest.sentry.io/...
SENTRY_ORG=your-org-name
SENTRY_PROJECT=llmhive
SENTRY_AUTH_TOKEN=sntrys_...

# ================================
# OPTIONAL - Analytics
# ================================
# Vercel Analytics is enabled by default when deployed to Vercel
# PostHog (optional)
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ================================
# OPTIONAL - AI Provider Keys
# ================================
# These are typically configured in your backend, but can be used for direct client calls
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_AI_API_KEY=...
OPENROUTER_API_KEY=sk-or-...

# ================================
# OPTIONAL - Feature Flags
# ================================
NEXT_PUBLIC_ENABLE_BENCHMARKS=false
NEXT_PUBLIC_ENABLE_ADMIN=false

# ================================
# DEVELOPMENT
# ================================
# Enable debug mode
DEBUG=false
# Node environment
NODE_ENV=development

# ================================
# PRODUCTION ONLY
# ================================
# Your production domain (required for some features)
NEXT_PUBLIC_APP_URL=https://llmhive.ai


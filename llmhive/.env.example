# Copy this file to .env and adjust the values for your environment.

# FastAPI environment label
ENVIRONMENT=development

# Database URL. Defaults to SQLite when omitted.
# Example for Postgres: postgresql+psycopg://user:password@hostname:5432/llmhive
DATABASE_URL=sqlite:///./llmhive.db

# OpenAI API key used by the orchestrator.
OPENAI_API_KEY=your-openai-key

# Default models to orchestrate when the request omits them (comma-separated list)
DEFAULT_MODELS=gpt-4o-mini,gpt-3.5-turbo

# Timeout for OpenAI calls in seconds
OPENAI_TIMEOUT_SECONDS=45

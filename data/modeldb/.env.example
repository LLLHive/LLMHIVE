# LLMHive ModelDB Pipeline Environment Variables
# Copy to .env and fill in values

# =============================================================================
# REQUIRED: Google Cloud / Firestore
# =============================================================================
# Path to service account JSON (if not running in Cloud Run with default creds)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# GCP Project ID (defaults to llmhive-orchestrator)
GOOGLE_CLOUD_PROJECT=llmhive-orchestrator

# =============================================================================
# REQUIRED: Pinecone
# =============================================================================
PINECONE_API_KEY=your-pinecone-api-key

# Index name for model embeddings (will be created if doesn't exist)
PINECONE_INDEX_NAME=modeldb-embeddings

# Cloud/region for index creation (default: aws/us-east-1)
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# =============================================================================
# OPTIONAL: OpenRouter API (for model enrichment)
# =============================================================================
OPENROUTER_API_KEY=your-openrouter-api-key

# =============================================================================
# OPTIONAL: Embeddings
# =============================================================================
# Set to "false" to skip Pinecone embedding generation (Firestore only)
MODELDB_EMBEDDINGS_ENABLED=true

# If using OpenAI embeddings instead of Pinecone integrated embeddings
# OPENAI_API_KEY=your-openai-api-key
# MODELDB_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# OPTIONAL: Paths (defaults shown)
# =============================================================================
# MODELDB_EXCEL_PATH=data/modeldb/LLMHive_OpenRouter_SingleSheet_ModelDB_Enriched_2025-12-25.xlsx
# MODELDB_ARCHIVE_DIR=data/modeldb/archives
# MODELDB_CACHE_DIR=.cache/llmhive_modeldb
